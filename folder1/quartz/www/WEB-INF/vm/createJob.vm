		<td>#text("label.job.recover")</td>
		<td><input type="checkbox" name="jobDetal.requestsRecovery" checked="true" /></td>
	</tr>
	<tr>
		<td>#text("label.job.durable")</td>
		<td><input type="checkbox" name="jobDetal.durability" checked="true" /></td>
	</tr>
